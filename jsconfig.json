{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "types": [
      "google-apps-script",
      "html5-qrcode"
    ]
  },
  "include": [
    "frontend/**/*",
    "backend/**/*",
    "deploy.js",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "google-apps-script",
      "html5-qrcode"
    ]
  }
}