    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^126.0.1",
    "joi": "^18.0.2",
    "morgan": "^1.10.1",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@google/clasp": "^3.1.3",
    "@types/google-apps-script": "^2.0.8",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "html5-qrcode": "^2.3.8",
    "https": "^1.0.0",
    "selfsigned": "^5.5.0",
    "vite": "^7.2.4",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-singlefile": "^2.3.0"
